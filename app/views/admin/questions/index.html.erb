<div class="content-wrapper">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <!--<div class ="col-md-12" align="right">
          <%#= link_to new_question_path, :class => "btn btn-success" do %>
            <i class="ti-plus custom-icon-text"></i>
            Create Question
          <%# end %>
        </div>-->

        <h4 class="card-title">Questions</h4>
        <!--<p class="card-description">
          Add class <code>.table-hover</code>
        </p>-->

        <div class="table-responsive">
          <table class="display expandable-table" style="width:100%" id="questions-datatable">
            <thead>
              <tr>
                <th>Question</th>
                <th>Options</th>
                <th>Correct Answer</th>
                <th>Tag</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @questions.each do |question| %>
                <tr>
                  <td><%= trim_text(question.question_text) %></td>
                  <td><%= trim_text(question.options) %></td>
                  <td><%= trim_text(question.correct_answer) %></td>
                  <td>
                    <% class_name = (question.tag == "attention_to_details") ? "bg-warning" : ((question.tag == "critical_thinking") ? "bg-danger" : ((question.tag == "numerical_reasoning") ? "bg-success" : "bg-info")) %>
                    <span class="badge <%= class_name %> custom-badge"><%= question.tag.humanize %></span>
                  </td>
                  <td>
                    <%= link_to edit_question_path(question), class: "btn btn-default custom-btn" do %>
                      <i class="mdi mdi-pencil custom-icon"></i>
                    <% end %>
                    <%= link_to question, method: :delete, class: "btn btn-default custom-btn" do %>
                      <i class="mdi mdi-delete custom-icon"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
