<div class="content-wrapper">
  <div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Import Questions</h4>
        <!--<p class="card-description">
          Add class <code>.table-hover</code>
        </p>-->

        <%= form_with url: question_bulk_upload_path, local: true, class: "forms-sample" do |form| %>
          <div class="form-group">
            <label>File upload</label>
            <%= form.file_field :file, class: "file-upload-default", accept: ".xlsx", required: true %>

            <div class="input-group col-xs-12">
              <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Excel File">
              <span class="input-group-append">
                <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
              </span>
            </div>
          </div>

          <%= form.submit "Import", id:"action", class: "btn btn-primary mr-2" %>
          <%= link_to "Cancel", "/admin/questions", class: "btn btn-light" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
