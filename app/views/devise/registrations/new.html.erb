<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
              <%= image_tag 'spritle_logo.png' %>
            </div>

            <h4>New here?</h4>
            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "pt-3") do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <%= f.text_field :name, class: "form-control form-control-lg", placeholder: "Name", required: true %>
              </div>

              <div class="form-group">
                <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email", required: true %>
              </div>

              <div class="form-group">
                <%= f.text_field :mobile, class: "form-control form-control-lg", placeholder: "Mobile", required: true %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password", required: true %>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Password Confirmation", required: true %>
              </div>

              <div class="mt-3">
                <%= f.submit "SIGN UP", class: "btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" %>
              </div>

              <div class="text-center mt-4 font-weight-light">
                Already have an account?
                <%= link_to "Login", new_user_session_path, method: :get, :class => 'text-primary' %>
              </div>
            <% end %>

            <%#= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
