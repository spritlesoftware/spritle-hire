<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth px-0">
      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
              <%= image_tag 'spritle_logo.png', style: 'width:120px' %>
            </div>

            <h4>Hello! let's get started</h4>
            <h6 class="font-weight-light">Sign in to continue.</h6>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "pt-3") do |f| %>
              <div class="form-group">
                <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Username", required: true %>
              </div>

              <div class="form-group">
                <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password", required: true %>
                <i class="mdi mdi-eye custom-eye-icon" id="togglePassword"></i>
              </div>

              <div class="form-check form-check-flat form-check-primary">
                <label class="form-check-label">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  Remember me
                </label>
              </div>

              <div class="mt-3">
                <%= f.submit "SIGN IN", class: "btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" %>
              </div>

              <div class="text-center mt-4 font-weight-light">
                Don't have an account?
                <%= link_to  "Create", new_user_registration_path, method: :get, :class => 'text-primary' %>
              </div>
            <% end %>

            <%#= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
